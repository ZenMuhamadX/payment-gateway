{
  "compilerOptions": {
    "target": "ES2020", // Target ECMAScript version
    "module": "commonjs", // Modul yang digunakan untuk Node.js
    "moduleResolution": "node", // Resolusi modul mirip dengan Node.js
    "outDir": "./dist", // Output directory untuk file JavaScript
    "rootDir": "./src", // Root directory dari file TypeScript
    "strict": true, // Mengaktifkan pemeriksaan ketat
    "esModuleInterop": true, // Mengaktifkan interoperabilitas ES6
    "skipLibCheck": true, // Lewati pemeriksaan tipe di file deklarasi
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"], // Termasuk file TypeScript di folder src
  "exclude": ["node_modules"] // Mengecualikan folder node_modules
}
